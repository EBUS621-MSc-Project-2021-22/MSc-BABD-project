#test run
library(igraph)
library(igraphdata)

set.seed(8675309)

gl <- graph(edges = c(1,2,
                      1,3,
                      2,4,
                      3,5,
                      5,1,
                      4,3))
summary(gl)
plot(gl)



#Test 3
library(igraph)
g1 <- graph(c("Amy", "Ram", "Ram", "Li", "Li", "Amy",
        "Amy", "Li", "Kate", "Li"))
plot(g1,
     vertex.color = "green",
     vertex.size = 40,
     edge.color = 'red')
g1
g1[]

#network measure
degree(g1, mode = 'all')
degree(g1, mode = 'in')
degree(g1, mode = 'out') 

diameter(g1, directed=F, weights = NA)
edge_density(g1, loops = F)
ecount(g1)/(vcount(g1)*(vcount(g1)-1))
reciprocity(g1)
closeness(g1, mode='all', weights = NA)
betweenness(g1, directed =T, weights = NA)
edge_betweenness(g1, directed=T, weights=NA)
